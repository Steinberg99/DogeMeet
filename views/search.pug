doctype html
html 
    include components/head.pug
    style 
        include ../static/public/css/search.css
    body 
        include components/header.pug
        main 
            form(action="/search-result", method="post") 
                section 
                    h3(class="section_header") DOGE PREFRENCES
                    div(class="age_container") 
                        label(class="age_label" for="age") Age 
                        p(id="age_counter") Select an age
                        input(id="age_slider" type="range" name="age" value="0" step="1" min="0" max="15")
                    div 
                        h3 Doge Vibe
                        ul(id="doge_vibe_list" class="checkbox_list")
                            li 
                                input(type="checkbox" id="cute" name="doge_vibes[0]" value="cute")
                                label(for="cute") Cute
                            li 
                                input(type="checkbox" id="playful" name="doge_vibes[1]" value="playful")
                                label(for="playful") Playful
                            li 
                                input(type="checkbox" id="fluffy" name="doge_vibes[2]" value="fluffy")
                                label(for="fluffy") Fluffy
                            li 
                                input(type="checkbox" id="relaxed" name="doge_vibes[3]" vlaue="relaxed")
                                label(for="relaxed") Relaxed
                            li
                                input(type="checkbox" id="cool" name="doge_vibes[4]" value="cool")
                                label(for="cool") Cool
                            li 
                                input(type="checkbox" id="beautiful" name="doge_vibes[5]" value="beautiful")
                                label(for="beautiful") Beautiful
                            li 
                                input(type="checkbox" id="chubby" name="doge_vibes[6]" value="chubby")
                                label(for="chubby") Chubby
                section 
                    h3(class="section_header") LOCATION PREFRENCES 
                    div     
                        h3 Location Type
                        ul(id="location_types" class="checkbox_list")
                            li 
                                input(type="checkbox" id="beach" name="beach")
                                label(for="beach") Beach
                            li 
                                input(type="checkbox" id="forest" name="forest")
                                label(for="forest") Forest
                            li  
                                input(type="checkbox" id="park" name="park")
                                label(for="park") Park
                            li 
                                input(type="checkbox" id="lake" name="lake")
                                label(for="lake") Lake
                            li 
                                input(type="checkbox" id="city_walk" name="city_walk")
                                label(for="city_walk") City walk
                    div 
                        h3 Locations Near You 
                        p(id="locations_text") Select a Location Type and find the nearest places where you can meet other dog owners!
                        ul(id="locations_list" class="checkbox_list")
                            each location, index in locations 
                                li(class="location_list_item" class=location.type)
                                    input(type="checkbox" id=`locations[${index}]` name=`locations[${index}]` value=`${location.id}`)
                                    label(for=`locations[${index}]`)= location.name
                                        span= location.distance
                input(id="submit_button" class="primary_button" type="submit" value="Search")
    script(src="../public/js/search.js") 